@model DoAnWebBanGiay.Models.Entities.NguoiDung
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="CodePel">
    <title> Đăng ký </title>
    <link rel="stylesheet" href="~/Customer/css/login-resigter.css">
    <link rel="stylesheet" href="~/Customer/css/demo.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        .no-gutters {
            margin-top: -150px;
        }
    </style>
</head>
<body>
    <div class="container form-register">
        <div class="row no-gutters shadow-lg">
            <div class=" d-none d-md-block"></div>
            <div class="col-md-12 bg-white p-5">
                <h3 class="pb-3 text-center">Vui lòng điền thông tin!</h3>
                <div class="form-style">
                    <form asp-action="Register" method="post">
                        <div class="form-group pb-3">
                            <input type="text" asp-for="HoTen" placeholder="Họ và tên" class="form-control" id="name">
                        </div>
                        <div class="form-group pb-3">
                            <input type="text" asp-for=DiaChi placeholder="Địa chỉ" class="form-control" id="address">
                        </div>
                        <div class="form-group pb-3">
                            <input type="email" asp-for="Email" placeholder="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        </div>
                        <div class="form-group pb-3">
                            <input type="text" asp-for="SDT" placeholder="Số điện thoại" class="form-control" id="phone">
                        </div>
                        <div class="form-group pb-3">
                            <input type="text" asp-for="TaiKhoan" placeholder="Tên đăng nhập" class="form-control" id="uer-name">
                        </div>
                        <div class="form-group pb-3">
                            <input type="password" asp-for="MatKhau" placeholder="Mật khẩu" class="form-control" id="matkhau">
                        </div>
                        <div class="form-group pb-3">
                            <input type="password" placeholder="Nhập lại mật khẩu" class="form-control" id="confirmmatkhau">
                        </div>
                        <div class="pb-2">
                            <button onclick="return CheckPass()" type="submit" class="btn btn-dark w-100 font-weight-bold mt-2">Đăng ký</button>
                        </div>
                        <div>
                            <p class="text-danger">@ViewBag.Error</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function CheckPass() {
        var pass = document.getElementById('matkhau').value;
        var confirm = document.getElementById('confirmmatkhau').value;
        if (pass != confirm) {
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Mật khẩu không khớp!",
                footer: ''
            });
            return false
        }
        return true;
    }
</script>