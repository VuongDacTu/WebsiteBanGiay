@model DoAnWebBanGiay.Models.Entities.NguoiDung
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="CodePel">
    <title> Đăng nhập </title>
    <link rel="stylesheet" href="~/Customer/css/login-resigter.css">
    <!-- <link rel="stylesheet" href="./css/demo.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        .no-gutters{
            margin-top:-100px;
        }
    </style>
</head>
<body>
    <div class="container form-login">
        <div class="row no-gutters shadow-lg">
            <div class=" d-none d-md-block"></div>
            <div class="col-md-12 bg-white p-5">
                <h3 class="pb-3 text-center">Vui lòng điền thông tin!</h3>
                <div class="form-style">
                    <form asp-action="Login" method="post">
                        <div class="form-group pb-3">
                            <input type="text" asp-for="TaiKhoan" placeholder="Tên đăng nhập" class="form-control" id="uer-name">
                        </div>
                        <div class="form-group pb-3">
                            <input type="password" asp-for="MatKhau" placeholder="Mật khẩu" class="form-control" id="matkhau">
                        </div>
                        <div class="pb-2">
                            <button type="submit" class="btn btn-dark w-100 font-weight-bold mt-2">Đăng nhập</button>
                        </div>
                        <div>
                            <p class="text-danger">@ViewBag.Error</p>
                        </div>
                    </form>
                    <div class="register d-flex pt-4 text-center">
                        <p>Bạn chưa có tài khoản ?</p>
                        <a asp-controller="DangNhap" asp-action="Register">Đăng kí tại đây</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

